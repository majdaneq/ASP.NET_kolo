@model Demo2.ViewModels.CategoriesWithBooks

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<ol>
    @foreach (var book in Model.Books)
    {
        <li>
            @Html.ActionLink(book.Title, "Details", "Home", new { book.Id}, null) napisanej przez: @book.Author
        </li>
    }
</ol>

@section Categories
{
    <ol>
       @for(int i=0;i< Model.Categories.Capacity-1; i++)
       {   if (Model.CurrentCategory == i + 1)
          {
            <li style="background-color:yellow">
                 <b><i>   @Html.ActionLink(Model.Categories[i].Name, "Index", "Home", new { Model.Categories[i].Id }, null)  </i>  </b>
            </li>
           }
           else
           {
             <li>
                @Html.ActionLink(Model.Categories[i].Name, "Index", "Home", new { Model.Categories[i].Id }, null)
            </li>
           }
       }
    </ol>
}

