@model Demo2.ViewModels.CarCategoryWithModels

@{
    ViewBag.Title = "Cars";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<ol>
    @foreach (var car in Model.CarModel)
    {
        <li>
            @Html.ActionLink(car.Name, "CarDetails", "Home", new { car.Id }, null) 
        </li>
    }
</ol>

@section Categories
{
    <ol>
        @for (int i = 0; i < Model.CarModel.Capacity - 1; i++)
        {
            if (Model.CurrentCategory == i + 1)
            {
                <li style="background-color:yellow">
                    <b><i>   @Html.ActionLink(Model.CarBrand[i].Name, "Cars", "Home", new { Model.CarBrand[i].Id }, null)  </i>  </b>
                </li>
            }
            else
            {
                <li>
                    @Html.ActionLink(Model.CarBrand[i].Name, "Cars", "Home", new { Model.CarBrand[i].Id }, null)
                </li>
            }
        }
    </ol>
}


